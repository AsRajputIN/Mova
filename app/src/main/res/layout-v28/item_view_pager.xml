<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <ImageView
        android:id="@+id/backDrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="#59181A20"
        android:scaleType="centerCrop"
        android:src="@drawable/doktor_strange" />

    <LinearLayout
        android:id="@+id/movieActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="25sp"
            tools:text="Movie Name" />

        <TextView
            android:id="@+id/genresTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textSize="11sp"
            android:text="Action, Superhero, Science Fiction..." />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/playBtn"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_btn"
                android:backgroundTint="@color/red"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:drawableTint="@color/white"
                    android:src="@drawable/play"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/play"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/AddListBtn"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/rounded_btn_bordered"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:drawableTint="@color/white"
                    android:src="@drawable/ic_baseline_add_24"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_list"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>